<h1> Edit profile </h1>
<%= form_with(model: @user, local: true) do |f| %>
    <div class="field">
        <%= f.label :about %><br />
        <%= f.text_area :about, autofocus: true, autocomplete: "about me" %>
    </div>


    <div class="field">
        <%= f.label :avatar %>
        <%= f.file_field :image, label: "Avatar" %>
    </div>

        <%= f.submit %>
<% end %>