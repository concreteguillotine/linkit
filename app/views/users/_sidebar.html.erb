<div class="sidebar">
    <p class="logo"> <%= link_to image_tag("/assets/me_logo.png"), posts_path %> </p>
    <h4 class="title"> Welcome to the Linkit! Create an account to vote for and comment on posts! </h4> 
        <div class="attributes">
            <h4 class="title"> <%= @user.username %> </h4>
                
            <div class="avatar">
                <% if @user.image.present? %>
                    <%= image_tag @user.image %>
                <% end %>
            </div>

            <div class="about_me">
                <h4 class="title"> About me: </h4>
                <p class= "about"><%= @user.about %></p>
            </div>
        </div>

       <ul class="actions">
            <% if user_signed_in? %>
                <% if @user == current_user %>
                    <li><%= link_to "Edit sign in information", edit_user_registration_path%></li>
                    <li><%= link_to "Edit profile", edit_user_path %></li>
                <% end %>
                <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger m1-1" %></li>
                Signed in as <%= current_user.username %>.
            <% end %>

            <% unless user_signed_in? %>
                <li><%= link_to "Sign up", new_user_registration_path %></li>
                <li><%= link_to "Sign in", new_user_session_path %></li>
            <% end %>

            <li><%= link_to "Return home", root_path %></li>
        </ul>
</div>
