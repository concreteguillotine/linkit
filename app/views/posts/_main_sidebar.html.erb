<div class="sidebar">
       <p class="logo"> <%= link_to image_tag("/assets/linkitlogo.png"), posts_path %> </p>
       <h4 class="title"> Welcome to the Linkit! Create an account to vote for and comment on posts! </h4>
       <ul class="actions">
            <li><%= link_to "Return home", root_path %></li>
            <% if user_signed_in? %>
                Signed in as <%= current_user.username %>.
                <li><%= link_to "Your profile", user_path(current_user) %>
                <li><%= link_to "New post", new_post_path(@post), method: :get %></li>
                <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger m1-1" %></li>
            <% end %>

            <% unless user_signed_in? %>
                <li><%= link_to "Sign up", new_user_registration_path %></li>
                <li><%= link_to "Sign in", new_user_session_path %></li>
            <% end %>
        </ul>

        <ul class="attributes">
        <%= form_tag(@tags_path, method: :get) do %>
            <%= label_tag "Search tags" %>
            <%= search_field_tag :search, params[:search] %>
                <%= submit_tag "Search" %>
        <% end %>
            <h3> Tags: </h3>
                <ul class="taglist"> <li class="tags"> <%= render "tags/tag_index", tags: @tags, posts: @posts %> </li> </ul>
                Sort by:
                    <li> <%= link_to "likes", sort_posts_path(:scope => "likes") %> </li>
                    <li> <%= link_to "time created", sort_posts_path(:scope => "time") %> </li>
        </ul>
</div>