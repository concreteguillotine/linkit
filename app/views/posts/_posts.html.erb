<div class="posts">
            <% posts.each do |post| %>
                <div class="ind-posts">
                    <% if post.image.present? %>
                        <div class="thumbnail"> <%= link_to (image_tag post.image), post %></div>
                    <% else %>
                        <div class="thumbnail"> <%= link_to (image_tag("/assets/textthumb.png")) %></div>
                    <% end %>

                    <li class="title"><%= link_to post.name, post %> by <%= post.author.username %>
                     | <%= post.get_likes.size %> <%= (post.get_likes.size) == 1 ? "vote!" : "votes!" %></li>
                </div>
            <% end %>
    </div>