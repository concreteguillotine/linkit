<body>
    <div class="sidebar">
       <p class="logo"> <%= link_to image_tag("/assets/me_logo.png"), posts_path %> </p>
       <h4> Welcome to the Linkit! Create an account to vote for and comment on posts! </h4>
       <ul class="actions">
            <% if user_signed_in? %>
                Signed in as <%= current_user.username %>.
                <li><%= link_to "Your profile", user_path(current_user) %>

                <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger m1-1" %></li>

                <li><%= link_to "New post", new_post_path(@post), method: :get %></li>

            <% end %>
            <% unless user_signed_in? %>
                <li class="<%= "active" if current_page?("/users/sign_up") %>"><%= link_to "Sign up", new_user_registration_path %></li>
                <li class="<%= "active" if current_page?("/users/sign_in") %>"><%= link_to "Sign in", new_user_session_path %></li>
            <% end %>
        </ul>
    </div>
    <div class="posts">
        <div class="ind-posts">
            <% @posts.each do |post| %>
                <% if post.image.present? %>
                    <div class="thumbnail"> <%= link_to (image_tag post.image), post %></div>
                <% else %>
                    <div class="thumbnail"> <%= link_to (image_tag("/assets/textthumb.png")) %></div>
                <% end %>

                <li class="title"><%= link_to post.name, post %> by <%= post.author.username %> with <%= post.get_likes.size %> <%= (post.get_likes.size) == 1 ? "vote!" : "votes!" %></li>
            <% end %>
        </div>
    </div>

</body>
