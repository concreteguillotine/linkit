<body>
    <%= render "posts/sidebar", post: @post %>
    <div class="content">
        <div class="post">
                <% if @post.image.present? %>
                    <div class="image"><%= image_tag @post.image %></div>
                <% end %>
                <% if @post.youtubeurl.present? %>
                    <iframe width=525 height=370 src="<%= Post.youtube_embed_url(@post.youtubeurl) %>"></iframe>
                <% end %>
                <% if @post.url.present? %>
                    <%= link_to @post.url, @post.url %>
                <% end %>
                <p class="caption"><%= @post.text %> </p>
    
        </div>


        <div class="comments">
            <header> <h3> Comments: </h3> </header>
            Sort by:
            <%= link_to "By likes", sort_post_comments_path(@post, :scope => "likes") %>
            <% if @comments.any? %>
                <% @comments.each do |comment| %>
                    <%= render "comments/comment", comment: comment %>
                <% end %>
                <% else %>
                    <p> No comments yet! </p>
                <% end %>
                <% users_only do %>
                    <%= render "comments/form", post: @post, comment: @comment %>
                <% end %>
        </div>
     </div>
</body>