<%= form_with(model: post, local: true) do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :image %>
        <%= f.file_field :image %>
    </div>

    <div>
        <%= f.label :text %>
        <%= f.text_area :text %>
        <%= f.submit %>
    </div>
<% end %>