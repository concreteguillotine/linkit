<%= form_with(model: post, local: true) do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
    </div>

    <div class="form-group">
        <%= f.label :text %>
        <%= f.text_area :text %>
    </div>

    <div class="form-group">
        <%= label_tag :tag_names, "Tags" %>
        <%= text_field_tag :tag_names, "", class: "form-control" %>
    </div>

    <%= f.submit %>
<% end %>