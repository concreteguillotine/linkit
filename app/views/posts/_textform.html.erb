<%= turbo_frame_tag "newpost_frame" do %>
    <%= form_with(model: @post, local: true) do |f| %>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>

        <div class="form-group">
            <%= f.label :text %>
            <%= f.text_area :text %>
        </div>

        <div class="form-group">
            <div> <%= label_tag :tag_names, "Tags" %> </div>
            <div class="tags">
                <% @post.tags.each do |tag|%>
                    <%= render "tags/tag", post: @post, tag: tag %>
                <% end %>
            </div>
            <%= text_field_tag :tag_names, "", class: "form-control" %>
        </div>

        <%= f.submit %>
    <% end %>
    <%= button_to "Cancel", root_path, method: :get %>
<% end %>